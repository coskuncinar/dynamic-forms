    "inputType": {
      "key": "inputType",
      "type": "control",
      "template": {
        "label": "Input type",
        "className": "col-3",
        "input": {
          "type": "select",
          "placeholder": "Enter an input type",
          "options": [
            {
              "value": "text",
              "label": "Text"
            },
            {
              "value": "search",
              "label": "Search"
            },
            {
              "value": "email",
              "label": "Email"
            },
            {
              "value": "password",
              "label": "Password"
            }
          ]
        }
      },
      "expressions": {
        "hidden": "data.parent.model.type !== 'textbox'",
        "disabled": "data.parent.model.type !== 'textbox'"
      }
    },
    "placeholder": {
      "key": "placeholder",
      "type": "control",
      "template": {
        "label": "Placeholder",
        "className": "col-12",
        "input": {
          "type": "textbox",
          "placeholder": "Enter a placeholder"
        }
      },
      "expressions": {
        "disabled": "(function(template) { return !template || !template.input || !template.input.type; })(data.root.model.template)"
      }
    },
    "multiple": {
      "key": "multiple",
      "type": "control",
      "template": {
        "label": "Multiple",
        "className": "col-12",
        "input": {
          "type": "checkbox"
        }
      },
      "expressions": {
        "hidden": "data.parent.model.type !== 'select'"
      }
    },
    "options": {
      "key": "options",
      "type": "array",
      "template": {
        "label": "Options",
        "className": "col-12"
      },
      "defaultValue": [
        {
          "value": "option1",
          "label": "Option1"
        }
      ],
      "expressions": {
        "hidden": "data.parent.model.type !== 'select' && data.parent.model.type !== 'radio' && data.parent.model.type !== 'toggle'",
        "disabled": "data.parent.model.type !== 'select' && data.parent.model.type !== 'radio' && data.parent.model.type !== 'toggle'"
      },
      "headerActions": [
        {
          "type": "icon",
          "template": {
            "type": "button",
            "icon": "push",
            "label": "Push option",
            "action": "pushArrayField"
          }
        },
        {
          "type": "icon",
          "template": {
            "type": "button",
            "icon": "pop",
            "label": "Pop option",
            "action": "popArrayField"
          },
          "expressions": {
            "disabled": "!data.parent.length"
          }
        },
        {
          "type": "icon",
          "template": {
            "type": "button",
            "icon": "remove",
            "label": "Clear options",
            "action": "clearArrayFields"
          },
          "expressions": {
            "disabled": "!data.parent.length"
          }
        }
      ],
      "definitionTemplate": {
        "type": "group",
        "template": {
          "classNameChildren": "row"
        },
        "expressions": {
          "label": "(data.index + 1) + '. Option / Option Group'"
        },
        "children": [
          {
            "key": "isOption",
            "type": "control",
            "template": {
              "label": "Option",
              "className": "col-2 align-self-center",
              "input": {
                "type": "checkbox",
                "defaultValue": true
              }
            },
            "unregistered": true
          },
          {
            "key": "value",
            "type": "control",
            "template": {
              "label": "Value",
              "className": "col-3",
              "input": {
                "type": "textbox",
                "placeholder": "Enter a value"
              },
              "validation": {
                "required": true
              }
            },
            "expressions": {
              "hidden": "!data.parent.model.isOption",
              "disabled": "!data.parent.model.isOption"
            }
          },
          {
            "key": "label",
            "type": "control",
            "template": {
              "label": "Label",
              "className": "col-4",
              "input": {
                "type": "textbox",
                "placeholder": "Enter a label"
              },
              "validation": {
                "required": true
              }
            },
            "expressions": {
              "className": "data.parent.model.isOption ? 'col-4' : 'col-7'"
            }
          },
          {
            "key": "disabled",
            "type": "control",
            "template": {
              "label": "Disabled",
              "className": "col-2 align-self-center",
              "input": {
                "type": "checkbox",
                "defaultValue": false
              }
            }
          },
          {
            "type": "icon",
            "template": {
              "classNameWrapper": "col-1",
              "label": "Remove option",
              "icon": "remove",
              "action": "removeArrayField"
            }
          },
          {
            "key": "items",
            "type": "array",
            "template": {
              "label": "Options of group",
              "className": "col-12"
            },
            "headerActions": [
              {
                "type": "icon",
                "template": {
                  "type": "button",
                  "icon": "push",
                  "label": "Push option",
                  "action": "pushArrayField"
                }
              },
              {
                "type": "icon",
                "template": {
                  "type": "button",
                  "icon": "pop",
                  "label": "Pop option",
                  "action": "popArrayField"
                },
                "expressions": {
                  "disabled": "!data.parent.length"
                }
              },
              {
                "type": "icon",
                "template": {
                  "type": "button",
                  "icon": "remove",
                  "label": "Clear options",
                  "action": "clearArrayFields"
                },
                "expressions": {
                  "disabled": "!data.parent.length"
                }
              }
            ],
            "definitionTemplate": {
              "type": "group",
              "template": {
                "className": "col-12",
                "classNameChildren": "row"
              },
              "expressions": {
                "label": "(data.parent.parent.index + 1) + '.' + (data.index + 1) + '. Option'"
              },
              "children": [
                {
                  "key": "value",
                  "type": "control",
                  "template": {
                    "label": "Value",
                    "className": "col-4",
                    "input": {
                      "type": "textbox",
                      "placeholder": "Enter a value"
                    },
                    "validation": {
                      "required": true
                    }
                  }
                },
                {
                  "key": "label",
                  "type": "control",
                  "template": {
                    "label": "Label",
                    "className": "col-4",
                    "input": {
                      "type": "textbox",
                      "placeholder": "Enter a label"
                    },
                    "validation": {
                      "required": true
                    }
                  }
                },
                {
                  "key": "disabled",
                  "type": "control",
                  "template": {
                    "label": "Disabled",
                    "className": "col-3 align-self-center",
                    "input": {
                      "type": "checkbox",
                      "defaultValue": false
                    }
                  }
                },
                {
                  "type": "icon",
                  "template": {
                    "classNameWrapper": "col-1",
                    "label": "Remove option",
                    "icon": "remove",
                    "action": "removeArrayField"
                  }
                }
              ]
            },
            "expressions": {
              "hidden": "data.parent.model.isOption",
              "disabled": "data.parent.model.isOption"
            }
          }
        ]
      }
    },
    "maskOptions": {
      "key": "maskOptions",
      "type": "group",
      "template": {
        "label": "Mask options",
        "className": "col-12",
        "classNameChildren": "row"
      },
      "expressions": {
        "hidden": "data.parent.model.type !== 'input-mask'",
        "disabled": "data.parent.model.type !== 'input-mask'"
      },
      "children": [
        {
          "key": "alias",
          "type": "control",
          "template": {
            "label": "Alias",
            "className": "col-12",
            "input": {
              "type": "select",
              "placeholder": "Select an alias",
              "options": [
                {
                  "value": null,
                  "label": "None"
                },
                {
                  "value": "email",
                  "label": "Email"
                },
                {
                  "value": "ip",
                  "label": "IP"
                },
                {
                  "value": "mac",
                  "label": "MAC"
                },
                {
                  "value": "ssn",
                  "label": "Social security number"
                },
                {
                  "value": "url",
                  "label": "URL"
                },
                {
                  "value": "vin",
                  "label": "Vehicle identification number"
                },
                {
                  "value": "decimal",
                  "label": "Decimal"
                },
                {
                  "value": "integer",
                  "label": "Integer"
                },
                {
                  "value": "percentage",
                  "label": "Percentage"
                }
              ]
            }
          }
        },
        {
          "key": "rightAlign",
          "type": "control",
          "template": {
            "label": "Right align",
            "className": "col-4",
            "input": {
              "type": "checkbox",
              "defaultValue": false
