          ]
        },
        {
          "template": {
            "label": "Template"
          },
          "children": [
            {
              "reference": "template"
            }
          ]
        },
        {
          "template": {
            "label": "Settings"
          },
          "children": [
            {
              "reference": "settings"
            }
          ]
        }
      ]
