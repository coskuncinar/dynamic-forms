          }
        },
        {
          "key": "showMaskOnFocus",
          "type": "control",
          "template": {
            "label": "Show mask on focus",
            "className": "col-4",
            "input": {
              "type": "checkbox",
              "defaultValue": true
            }
          }
        },
        {
          "key": "showMaskOnHover",
          "type": "control",
          "template": {
            "label": "Show mask on hover",
            "className": "col-4",
            "input": {
              "type": "checkbox",
              "defaultValue": true
            }
          }
        }
