{
  "template": {
    "label": "Validation of inputs with hints"
  },
  "children": [
    {
      "key": "combobox",
      "type": "control",
      "template": {
        "label": "Combobox",
        "input": {
          "type": "combobox",
          "placeholder": "Enter a text",
          "options": [
            "Value1",
            "Value2",
            "Value3"
          ],
          "minLength": 5,
          "maxLength": 6,
          "pattern": "^Value[0-9]$"
        },
        "validation": {
          "required": true,
          "minLength": true,
          "maxLength": true,
          "pattern": true
        },
        "hints": {
          "hintStart": "Pattern: Value[0-9]"
        }
      }
    },
    {
      "key": "datepicker",
      "type": "control",
      "template": {
        "label": "Datepicker",
        "input": {
          "type": "datepicker",
          "placeholder": "Enter a date"
        },
        "validation": {
          "required": true
        },
        "hints": {
          "hintEnd": "Click to open calendar"
        }
      }
    },
    {
      "key": "file",
      "type": "control",
      "template": {
        "label": "File",
        "input": {
          "type": "file",
          "placeholder": "Upload a file",
          "maxFileSize": 5242880
        },
        "validation": {
          "required": true,
          "maxFileSize": true
        },
        "hints": {
          "hintEnd": "Max size: 5MB"
        }
      }
    },
    {
      "key": "numberbox",
      "type": "control",
      "template": {
        "label": "Numberbox",
        "input": {
          "type": "numberbox",
          "placeholder": "Enter a number",
          "min": -5,
          "max": 5
        },
        "validation": {
          "required": true,
          "min": true,
          "max": true
        },
        "hints": {
          "hintStart": "Min: -5",
          "hintEnd": "Max: 5"
        }
      }
    },
    {
      "key": "select",
      "type": "control",
      "template": {
        "label": "Select",
        "input": {
          "type": "select",
          "placeholder": "Select an option",
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            },
            {
              "value": 3,
              "label": "Option 3",
              "disabled": true
            }
          ]
        },
        "validation": {
          "required": true
        },
        "hints": {
          "hintEnd": "Click to open selection"
        }
      }
    },
    {
      "key": "textarea",
      "type": "control",
      "template": {
        "label": "Textarea",
        "input": {
          "type": "textarea",
          "placeholder": "Enter a text"
        },
        "validation": {
          "required": true
        },
        "hints": {
          "hintStart": "Press 'Enter' for line break"
        }
      }
    },
    {
      "key": "textbox",
      "type": "control",
      "template": {
        "label": "Textbox",
        "input": {
          "type": "textbox",
          "placeholder": "Enter a text",
          "minLength": 5,
          "maxLength": 20
        },
        "validation": {
          "required": true,
          "minLength": true,
          "maxLength": true
        }
      },
      "expressions": {
        "hints.hintStart": "'Min ' + (data.model || '').length + '/5'",
        "hints.hintEnd": "'Max ' + (data.model || '').length + '/20'"
      }
    },
    {
      "key": "email",
      "type": "control",
      "template": {
        "label": "Email",
        "input": {
          "type": "textbox",
          "inputType": "email",
          "placeholder": "Enter an email"
        },
        "validation": {
          "required": true,
          "email": true
        },
        "hints": {
          "hintStart": "E.g. user@gmail.com"
        }
      }
    },
    {
      "key": "password",
      "type": "control",
      "template": {
        "label": "Password",
        "input": {
          "type": "textbox",
          "inputType": "password",
          "placeholder": "Enter a password",
          "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
        },
        "validation": {
          "required": true,
          "pattern": true
        }
      },
      "expressions": {
        "hints.hintStart": "'Min ' + (data.model || '').length + '/6'",
        "hints.hintEnd": "'Max ' + (data.model || '').length + '/20'"
      }
    }
  ],
  "footerActions": [
    {
      "id": "action-submit",
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      }
    },
    {
      "id": "action-validate",
      "type": "button",
      "template": {
        "type": "button",
        "label": "Validate",
        "action": "validate"
      }
    },
    {
      "id": "action-reset",
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    }
  ]
}